.container {
    flex-grow: 1;
    justify-content: flex-end;
    align-items: center;
    padding-bottom: 50px;
}

.share-button {
    width: 200px;
    height: 60px;
    font-size: 18px;
    background-color: rgb(0, 122, 255);
    color: white;
    border-radius: 10px;
    border-width: 0;
    -unity-font-style: bold;
}

.share-button:hover {
    background-color: rgb(0, 100, 220);
}

.share-button:active {
    background-color: rgb(0, 80, 180);
}